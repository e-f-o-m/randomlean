<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mTextSetting">
        <item name="android:textSize">@dimen/textSetting</item>
        <item name="android:fontFamily">Vernada</item>
        <item name="android:textColor">@color/text_l</item>
        <item name="android:textColorHint">#BDBDBD</item>
    </style>


    <style name="CustomShapeAppearance">
        <item name="neumorph_backgroundColor">@color/background</item>
        <item name="neumorph_shadowColorLight">@color/shadowColorLight</item>
        <item name="neumorph_shadowColorDark">@color/shadowColorDark</item>
    </style>
    <style name="CustomNeuButton" parent="Widget.Neumorph.Button">
        <item name="neumorph_backgroundColor">@color/background</item>
        <item name="neumorph_shadowColorLight">@color/shadowColorLight</item>
        <item name="neumorph_shadowColorDark">@color/shadowColorDark</item>
    </style>
    <style name="background_curves">
        <item name="android:background">@drawable/add</item>
    </style>

    <style name="title_shadow">
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#3B034451</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="green">
        <item name="android:background">@drawable/border_tolboard_dark</item>
    </style>

    <color name="background">#2c3030</color>
    <color name="shadowColorLight">#464C4D</color>
    <color name="shadowColorDark">#121313</color>

    <color name="colorPrimary">#292929</color>
    <color name="colorPrimaryDark">#6A8699</color>
    <color name="colorAccent">#e78c4c</color>

    <color name="colorTransp">#00FFFFFF</color>

    <!--fondo main -->
    <color name="fondoStart">#3C3C3C</color>
    <color name="fondoCenter">#333333</color>
    <color name="fondoEnd">#303030</color>

    <color name="danger">#B61537</color>
    <color name="warning">#D1B212</color>
    <color name="primary">#0091EA</color>
    <color name="success">#0A78B3</color>

    <color name="text_l">#8DDCE6EA</color>
    <color name="text_l1">#9ED7DDE1</color>
    <color name="text_d">#9FA6A6</color>
    <color name="text_title">#A66FBCFF</color>
    <color name="text_siempre_banco">#C6E5E8</color>
    <color name="text_hint">#68706F</color>

    <color name="card">#333C43</color>
</resources>
