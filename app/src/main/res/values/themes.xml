<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBa">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_difficulty</item>

    </style>



    <style name="mTextSetting">
        <item name="android:textSize">@dimen/textSetting</item>
        <item name="android:fontFamily">Vernada</item>
        <item name="android:textColor">@color/text_l</item>
        <item name="android:textColorHint">#C3C3C3</item>
    </style>

    <style name="mSizeText">
        <item name="android:textSize">52sp</item>
    </style>
    <style name="temamaht">
        <item name="android:textSize">@dimen/ambilwarna_hueWidth</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="card_main_bg">
        <item name="android:background">@drawable/tarjeta</item>
    </style>
    <style name="card_main_title">
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#9F045C3D</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="green">
