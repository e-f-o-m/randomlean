<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mTextSetting">
        <item name="android:textSize">@dimen/textSetting</item>
        <item name="android:textColor">@color/text_l</item>
        <item name="android:textColorHint">#C3C3C3</item>
    </style>
    <!--<item name="android:fontFamily">Veranda</item>-->


    <style name="CustomShapeAppearance">
        <item name="neumorph_backgroundColor">#E8ECEC</item>
        <item name="neumorph_shadowColorLight">#F9FDFC</item>
        <item name="neumorph_shadowColorDark">#B1B1B1</item>
    </style>
    <style name="CustomNeuButton" parent="Widget.Neumorph.Button">
        <item name="neumorph_backgroundColor">#E8ECEC</item>
        <item name="neumorph_shadowColorLight">#F4F4F4</item>
        <item name="neumorph_shadowColorDark">#AAAAAA</item>
    </style>
    <style name="background_curves">
        <item name="android:background">@drawable/add</item>
    </style>

    <style name="title_shadow">
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#9F045C3D</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="green">
        <item name="android:background">@drawable/border_tolboard</item>
    </style>

    <color name="background">#F3F3F3</color>
    <color name="shadowColorLight">#F1F1F1</color>
    <color name="shadowColorDark">#CACACA</color>
    <color name="colorPrimary">#e0f9fa</color>
    <color name="colorPrimaryDark">#6a7a99</color>
    <color name="colorAccent">#e78c4c</color>

    <color name="colorTransp">#00FFFFFF</color>

    <!--fondo main -->
    <color name="fondoStart">#F7F8FC</color>
    <color name="fondoCenter">#F6FAFB</color>
    <color name="fondoEnd">#F0F1F6</color>

    <color name="danger">#B61537</color>
    <color name="warning">#D1B212</color>
    <color name="primary">#0091EA</color>
    <color name="success">#07AE66</color>

    <color name="text_l">#80000000</color>
    <color name="text_l1">#4D000000</color>
    <color name="text_d">#323232</color>
    <color name="text_title">#828787</color>
    <color name="text_siempre_banco">#F1F1F1</color>
    <color name="text_hint">#C3C3C3</color>

    <color name="card">#EAEAEA</color>
</resources>
